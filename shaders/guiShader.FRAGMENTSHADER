#version 420 core

// Interpolated values from the vertex shaders
in vec4 fragColor;
in vec2 fragUV;

// Ouput data
out vec4 output;

uniform mat4 View;
uniform sampler2D tex;
uniform vec4 hoverColor;

void main(){

	vec4 textureColor = texture(tex, fragUV);
	output = fragColor *hoverColor* textureColor;
}